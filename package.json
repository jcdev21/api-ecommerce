{
  "name": "app-server",
  "version": "1.0.0",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "start": "node ./dist/app.js",
    "dev": "nodemon --watch './**/*.ts' --exec ts-node -r tsconfig-paths/register src/app.ts",
    "dev:server": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' -r tsconfig-paths/register src/app.ts",
    "lint": "eslint . --fix",
    "build:dist": "rm -rf dist/ && tsc",
    "build-watch:dist": "rm -rf dist/ && tsc -w",
    "build": "tsc",
    "format": "prettier --write --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "prisma": "^3.15.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.2",
    "typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
    "@prisma/client": "^3.15.1",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.17.3",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1"
  },
  "lint-staged": {
    "*.{js, jsx, ts, tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,html}": [
      "prettier --write"
    ]
  }
}
